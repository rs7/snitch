{erl_opts, [
  {parse_transform, lager_transform}
]}.

{deps, [
  {jsone, {git, "https://github.com/sile/jsone.git", {tag, "1.3.2"}}},
  {gun, {git, "https://github.com/ninenines/gun.git", {branch, "master"}}},
  {lager, {git, "https://github.com/basho/lager.git", {tag, "3.2.2"}}},
  {gproc, {git, "https://github.com/uwiger/gproc.git", {tag, "0.6.1"}}},
  {folsom, {git, "https://github.com/boundary/folsom.git", {tag, "0.8.2"}}},
  {prometheus, {git, "https://github.com/deadtrickster/prometheus.erl.git", {tag, "v3.0.0"}}}
]}.

{overrides, [
  {override, jsone, [{erl_opts, [{d, 'ENABLE_HIPE'}, inline]}]}
]}.

{base_dir, "build"}.

{shell, [
  {apps, [likes]},
  {config, "./config/app.config"}
]}.
