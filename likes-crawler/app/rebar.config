{erl_opts, [
  debug_info,
  {d, debug},
  {parse_transform, lager_transform}
]}.

{deps, [
  jsone,
  {gun, {git, "https://github.com/ninenines/gun.git", {branch, "master"}}},
  lager,
  {gproc, {git, "https://github.com/uwiger/gproc.git", {tag, "0.6"}}}
]}.

{overrides, [
  {override, jsone, [{erl_opts, [{d, 'ENABLE_HIPE'}, inline]}]}
]}.

{base_dir, "build"}.

{shell, [
  {apps, []},
  {config, "./config/app.config"}
]}.
